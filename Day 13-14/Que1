<script type="text/javascript">
setInterval(myTimer, 1000);

function myTimer() {
  var d = new Date();
  document.getElementById("Demo").innerHTML = d.toLocaleTimeString(); //Return the time portion of a Date object as a string, using locale conventions
}
</script>

